<% layout('layouts/boilerplate') %>
<h1>All Products</h1>
<% for(let campground of campgrounds) {%>
<div class="card mb-3">
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(campground.images.length) {%>
                <img class="img-fluid" alt="" style="width: 100%; height: 300px;" src="<%=campground.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://img.traveltriangle.com/blog/wp-content/uploads/2019/11/Camping-in-Kullu-29_nov2.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text"><%= campground.description %> </p>
                    <p class="card-text">
                        <small><%= campground.location %></small>
                    </p>
                    <a href="campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>